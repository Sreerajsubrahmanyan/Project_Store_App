<div class="container mt-5">
  <div class="card shadow-sm border-0 rounded-lg p-4">
    <div class="row">
      <div class="col-md-6 text-center">
        <% if @product.image.present? %>
          <%= image_tag @product.image, alt: @product.name, class: "img-fluid rounded", style: "max-width: 100%; height: auto; object-fit: cover;" %>
        <% else %>
          <p class="text-muted">No image available</p>
        <% end %>
      </div>

      <div class="col-md-6 d-flex flex-column justify-content-center">
        <h1 class="mb-3"><%= @product.name %></h1>
        <p class="fs-5"><strong>Price:</strong> <span class="text-success fw-bold">â‚¹<%= @product.price %></span></p>
        <p class="text-muted"><strong>Description:</strong> <%= @product.description %></p>

        <div class="mt-3">
          <%= link_to "Add to Cart", cart_items_path(@product), method: :post, class: "btn btn-primary btn-lg me-2" %>
          <%= link_to "Continue Shopping", products_path, class: "btn btn-outline-secondary btn-lg" %>
        </div>
      </div>
    </div>
  </div>
</div>
